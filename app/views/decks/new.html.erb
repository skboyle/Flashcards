<div class="max-w-6xl mx-auto px-6 py-12 bg-gray-50">
  <h1 class="text-2xl font-bold mb-6 text-green-800"><%= action_name.capitalize %> Deck</h1>

  <%= form_with model: @deck, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block mb-1 font-semibold" %>
      <%= f.text_field :name, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: "block mb-1 font-semibold" %>
      <%= f.text_area :description, class: "w-full p-2 border rounded" %>
    </div>

    <%= f.submit "#{action_name.capitalize} Deck", class: "px-4 py-2 bg-green-200 hover:bg-green-300 rounded" %>
  <% end %>

  <%= link_to "Back", root_path, class: "inline-block mt-4 text-green-700 hover:underline" %>
</div>
